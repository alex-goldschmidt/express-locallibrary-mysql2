extends layout

block content

  h1 #{title}

  form(method='POST')
    div.form-group
      label(for='genreName') Genre:
      input#name.form-control(type='text', placeholder='Fantasy, Poetry etc.' name='genreName' required value=(undefined===genre ? '' : genre.genreName) )
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
